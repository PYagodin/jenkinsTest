@echo off
REM HTML Generator for Jenkins Pipeline
REM This batch script copies the index.html file to the output directory

REM Get parameters (remove quotes if present)
set TITLE=%~1
set COLOR=%~2

REM Create output directory if it doesn't exist
if not exist output mkdir output

REM Copy the HTML file to the output directory
copy index.html output\index.html

REM Generate a simple timestamp file for reference
echo HTML generated at: %date% %time% > output\timestamp.txt
echo Title: %TITLE% >> output\timestamp.txt
echo Color: %COLOR% >> output\timestamp.txt

REM Create a properly formatted HTML file with embedded parameters
echo ^<!DOCTYPE html^> > output\result.html
echo ^<html lang="en"^> >> output\result.html
echo ^<head^> >> output\result.html
echo ^<meta charset="UTF-8"^> >> output\result.html
echo ^<meta name="viewport" content="width=device-width, initial-scale=1.0"^> >> output\result.html
echo ^<title^>%TITLE%^</title^> >> output\result.html
echo ^<style^> >> output\result.html
echo body { >> output\result.html
echo   font-family: Arial, sans-serif; >> output\result.html
echo   background-color: %COLOR%; >> output\result.html
echo   color: white; >> output\result.html
echo   margin: 0; >> output\result.html
echo   padding: 20px; >> output\result.html
echo   display: flex; >> output\result.html
echo   flex-direction: column; >> output\result.html
echo   align-items: center; >> output\result.html
echo   justify-content: center; >> output\result.html
echo   min-height: 100vh; >> output\result.html
echo } >> output\result.html
echo .container { >> output\result.html
echo   background-color: rgba(0, 0, 0, 0.5); >> output\result.html
echo   border-radius: 10px; >> output\result.html
echo   padding: 30px; >> output\result.html
echo   box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); >> output\result.html
echo   max-width: 800px; >> output\result.html
echo   width: 100%%; >> output\result.html
echo } >> output\result.html
echo h1 { >> output\result.html
echo   margin-top: 0; >> output\result.html
echo   border-bottom: 2px solid white; >> output\result.html
echo   padding-bottom: 10px; >> output\result.html
echo } >> output\result.html
echo .info { >> output\result.html
echo   margin-top: 20px; >> output\result.html
echo } >> output\result.html
echo .color-sample { >> output\result.html
echo   display: inline-block; >> output\result.html
echo   width: 20px; >> output\result.html
echo   height: 20px; >> output\result.html
echo   border: 1px solid white; >> output\result.html
echo   vertical-align: middle; >> output\result.html
echo   margin-left: 10px; >> output\result.html
echo   background-color: %COLOR%; >> output\result.html
echo } >> output\result.html
echo ^</style^> >> output\result.html
echo ^</head^> >> output\result.html
echo ^<body^> >> output\result.html
echo ^<div class="container"^> >> output\result.html
echo ^<h1^>%TITLE%^</h1^> >> output\result.html
echo ^<div class="info"^> >> output\result.html
echo ^<p^>This HTML file was generated by a Jenkins Pipeline job.^</p^> >> output\result.html
echo ^<p^>Generation time: %date% %time%^</p^> >> output\result.html
echo ^<p^>Background color: %COLOR% ^<span class="color-sample"^>^</span^>^</p^> >> output\result.html
echo ^</div^> >> output\result.html
echo ^</div^> >> output\result.html
echo ^</body^> >> output\result.html
echo ^</html^> >> output\result.html

echo HTML file generated in the output directory: output\result.html 